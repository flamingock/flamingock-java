<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender with detailed formatting for debugging -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %-20logger{20} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File appender for persistent debugging -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>flamingock-cli-debug.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Flamingock specific loggers -->
    <logger name="io.flamingock" level="DEBUG"/>
    <logger name="FK-Builder" level="INFO"/>
    <logger name="OpsClient" level="DEBUG"/>
    
    <!-- MongoDB driver logging -->
    <logger name="org.mongodb.driver" level="INFO"/>
    <logger name="org.mongodb.driver.connection" level="WARN"/>
    <logger name="org.mongodb.driver.cluster" level="INFO"/>
    
    <!-- AWS SDK logging -->
    <logger name="software.amazon.awssdk" level="INFO"/>
    
    <!-- CLI specific logging -->
    <logger name="io.flamingock.cli" level="DEBUG"/>
    
    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>
</configuration>